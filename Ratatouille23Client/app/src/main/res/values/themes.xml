<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ratatouille23Client" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/appBlueColor</item>
        <item name="itemTextAppearance">@color/white</item>
        <item name="itemTextAppearanceInactive">@color/appGrayColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ratatouille23Client.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <style name="Theme.Ratatouille23Client.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.Ratatouille23Client.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name ="navigationIconTint">@color/appBlueColor</item>

    </style>

    <style name="CustText" parent="TextAppearance.AppCompat">

        <item name="android:textColor">@drawable/drawer_list_selector</item>

    </style>

</resources>