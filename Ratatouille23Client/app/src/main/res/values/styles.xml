<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">#344293</item>
        <item name="android:textColor">#ffffff</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!-- Style for enabled buttons -->
    <style name="EnabledButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/appBlueColor</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Style for disabled buttons -->
    <style name="DisabledButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/appGrayColor</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:alpha">0.5</item>
    </style>


    <style name="Button2" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#ffffff</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Button3" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">#344293</item>
        <item name="android:textColor">#ffffff</item>
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
    </style>



</resources>